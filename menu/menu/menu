echo -e "           $NC [${YELL}05${NC}]$Lgreen MENU SSWS$NC     ${z} $NC [${YELL}10${NC}]$Lgreen MENU UPDATE$NC ${z} $NC"
echo -e "   \033[92mâ—ˆâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â—ˆ \033[0m"
echo -e "           \033[35mâ”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â” \033[0m"
echo -e "             HARI INI${NC} ${Lgreen}$ttoday$NC KEMARIN${NC} ${Lgreen}$tyest$NC"
